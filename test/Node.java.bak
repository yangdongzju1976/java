/*
节点类，每一条蛇是由若干个节点组成，每一个节点有横纵坐标组成
*/
import java.util.Random;
public class Node
{
	private int x;
	private int y;
	public Node(){
	}

	public Node(int x,int y){
		this.x=x;
		this.y=y;
	}

	public int getX(){
		return x;
	}

	public void setX(int x){
		this.x=x;
	}

	public int getY(){
		return y;
	}

	public void setY(int y){
		this.y=y;
	}

	//随机位置的方法
	public void random(){
		//创建Random对象
		Random r=new Random();
		//生成横坐标
		this.x=25*(r.nextInt(40));
		//生成纵坐标
		this.y=25*(r.nextInt(40));
	}
}